############################################
# Blood Script Engine - Production Environment
# Copy to .env.production and fill in values
############################################

############################################
# Application
############################################
NODE_ENV=production
PORT=3000

############################################
# Domain Configuration (Subdomains)
############################################
# Main public website
PUBLIC_WEBSITE_URL=https://bloodscriptengine.tech

# Companion dashboard (API + React app)
COMPANION_APP_URL=https://app.bloodscriptengine.tech

# API base URL (same as companion for this setup)
API_BASE_URL=https://app.bloodscriptengine.tech/api

############################################
# Database (PostgreSQL - Supabase)
############################################
# Option 1: Full connection string
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE

# Option 2: Individual parameters (takes precedence if set)
DB_HOST=
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=
DB_SSL=true

############################################
# Discord OAuth
# IMPORTANT: Update redirect in Discord Developer Portal to:
# https://app.bloodscriptengine.tech/api/auth/discord/callback
############################################
DISCORD_CLIENT_ID=1438563946432036904
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_OAUTH_REDIRECT_URI=https://app.bloodscriptengine.tech/api/auth/discord/callback
DISCORD_BOT_TOKEN=your_discord_bot_token

############################################
# Security
############################################
JWT_SECRET=your_jwt_secret_min_32_chars
SESSION_SECRET=your_session_secret_min_32_chars

############################################
# Bot Owner (optional)
############################################
BOT_OWNER_DISCORD_ID=

############################################
# AI Configuration (optional)
############################################
GEMINI_API_KEY=
AI_MAX_TOKENS=800
AI_TEMPERATURE=0.7

############################################
# Safety System Thresholds
############################################
SAFETY_YELLOW_THRESHOLD=25
SAFETY_RED_THRESHOLD=1

############################################
# Object Storage (Replit - leave empty for GCP)
############################################
# These are Replit-specific, configure GCS for production
# DEFAULT_OBJECT_STORAGE_BUCKET_ID=
# PRIVATE_OBJECT_DIR=
# PUBLIC_OBJECT_SEARCH_PATHS=
