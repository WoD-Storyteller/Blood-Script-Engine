# Blood Script Engine - Production Environment Variables
# Copy to .env.production and fill in values
# NEVER commit this file with real secrets!

# ======================
# DATABASE (Supabase)
# ======================
DATABASE_URL=postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-eu-west-2.pooler.supabase.com:6543/postgres

# ======================
# DISCORD
# ======================
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_OAUTH_REDIRECT_URI=https://api.bloodscriptengine.co.uk/api/auth/discord/callback
BOT_OWNER_DISCORD_ID=your_discord_user_id

# ======================
# AUTHENTICATION
# ======================
# Generate secrets with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_32_chars_minimum
SESSION_SECRET=your_session_secret_32_chars

# ======================
# AI FEATURES
# ======================
GEMINI_API_KEY=your_gemini_api_key

# ======================
# APPLICATION URLS
# ======================
API_URL=https://api.bloodscriptengine.co.uk
COMPANION_APP_URL=https://app.bloodscriptengine.co.uk
PUBLIC_WEBSITE_URL=https://www.bloodscriptengine.co.uk

# ======================
# SERVER
# ======================
NODE_ENV=production
PORT=3000

# ======================
# OBJECT STORAGE (Optional - GCS)
# ======================
# GCS_BUCKET=bloodscript-uploads
# GCS_PROJECT_ID=your_gcp_project
